<h2><%= @cat.name %></h2>
<table>
  <tr>
    <td>Birthdate</td>
    <td><%=@cat.birth_date%></td>
  </tr>
  <tr>
    <td>Color</td>
    <td><%=@cat.color%></td>
  </tr>
  <tr>
    <td>Sex</td>
    <td><%=@cat.sex%></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%=@cat.description%></td>
  </tr>
</table>

<% @cat_rental_requests.order(:start_date).each do |request| %>
  <ul>Start Date: <%= request.start_date %></ul>
  <ul>End Date: <%= request.end_date %></ul>
  <ul>Status: <%= request.status %></ul>
  <ul>ID: <%= request.id %></ul>
  <%= button_to "Approve", approve_cat_rental_request_url(request), method: :patch %>
  <%= button_to "Deny", deny_cat_rental_request_url(request), method: :patch %>
<% end %>

<% content_for :footer do %>
  <p>
    Please support this page.
  </p>
<% end %>
