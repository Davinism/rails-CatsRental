<% action_url = @cat_rental_request.persisted? ? cat_rental_request_url(@cat_rental_request) : cat_rental_requests_url %>

<form action="<%= cat_rental_requests_url %>" method="POST">
  <%= auth_token %>
  <% if @cat_rental_request.persisted? %>
    <input type="hidden" name="_method" value="patch">
  <% end %>

  <label>Cat Name:
    <select name="cat_rental_request[cat_id]" value="<%=@cat_rental_request.cat_id%>">
      <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
      <% end %>
    </select>
  </label>

  <label>Start Date:
    <input type="date" name="cat_rental_request[start_date]" value="<%=@cat_rental_request.start_date%>">
  </label>

  <label>End Date:
    <input type="date" name="cat_rental_request[end_date]" value="<%=@cat_rental_request.end_date%>">
  </label>

  <% if @cat_rental_request.persisted? %>
    <input type="submit" value="Submit Renewed Cat">
  <% else %>
    <input type="submit" value="Submit New Cat">
  <% end %>


</form>
